# Database
DATABASE_URL="file:./dev.db"

# Network Selection: localhost, amoy, or polygon
NEXT_PUBLIC_NETWORK=localhost

# Chain Configuration
# Localhost: 31337, Amoy: 80002, Polygon: 137
NEXT_PUBLIC_CHAIN_ID=31337
NEXT_PUBLIC_RPC_URL=http://127.0.0.1:8545

# Hardhat Forking (Required for contracts/ scripts if ENABLE_FORK=true)
MAINNET_FORK_RPC_URL="https://polygon-rpc.com"

# Contract Addresses
# Auto-filled by deployment script usually, but can be manual
NEXT_PUBLIC_PROXY_FACTORY_ADDRESS=
NEXT_PUBLIC_TREASURY_ADDRESS=
NEXT_PUBLIC_EXECUTOR_ADDRESS=
NEXT_PUBLIC_USDC_ADDRESS=
NEXT_PUBLIC_CTF_ADDRESS=
NEXT_PUBLIC_BOT_ADDRESS=

# Private Keys (For Scripts/Server-side only)
TRADING_PRIVATE_KEY=
TRADING_MNEMONIC=

# Copy Trading Execution (Worker/Server)
# Enable real execution + guardrails
ENABLE_REAL_TRADING=false
COPY_TRADING_API_URL=http://localhost:3000
COPY_TRADING_DAILY_CAP_USD=
COPY_TRADING_WALLET_DAILY_CAP_USD=
COPY_TRADING_EXECUTION_ALLOWLIST=
COPY_TRADING_MAX_TRADE_USD=

# Execution RPC + failover
COPY_TRADING_RPC_URL=
COPY_TRADING_RPC_URLS=

# WS optimization
COPY_TRADING_WS_FILTER_BY_ADDRESS=false

# Execution idempotency + pricing guards
COPY_TRADING_PRICE_TTL_MS=5000
COPY_TRADING_IDEMPOTENCY_BUCKET_MS=5000

# Worker pool
COPY_TRADING_WORKER_KEYS=
COPY_TRADING_WORKER_INDEX=0

# Monitoring / alerts
COPY_TRADING_METRICS_INTERVAL_MS=300000
COPY_TRADING_BOT_USDC_WARN=
COPY_TRADING_BOT_MATIC_WARN=
COPY_TRADING_PROXY_USDC_WARN=
COPY_TRADING_PROXY_CHECK_LIMIT=5

# Retry queue
COPY_TRADING_MAX_RETRY_ATTEMPTS=2
COPY_TRADING_RETRY_BACKOFF_MS=60000
COPY_TRADING_RETRY_INTERVAL_MS=60000

# Mempool Optimization
MEMPOOL_PROVIDER=STANDARD # or ALCHEMY
NEXT_PUBLIC_ALCHEMY_API_KEY=

# Speed Mode (Execution Guardrails)
COPY_TRADING_SPEED_MODE=false
COPY_TRADING_SPEED_PROFILE=standard # or speed
COPY_TRADING_MAX_SPREAD_BPS=80
COPY_TRADING_MIN_DEPTH_USD=10
COPY_TRADING_MIN_DEPTH_RATIO=1.2
COPY_TRADING_DEPTH_LEVELS=5
